<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".CupomActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_logo_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="105dp"
                    android:background="@drawable/bg_shape_white"
                    android:padding="10dp"
                    app:srcCompat="@drawable/logo_expotec" />

                <ImageView
                    android:id="@+id/image_fieb_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="@drawable/bg_shape_white"
                    android:padding="10dp"
                    app:srcCompat="@drawable/logo_fieb" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_aviso_coupon"
                android:textColor="@color/colorBlackGray"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/image_coupon"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textAlignment="center"
                tools:srcCompat="@tools:sample/avatars" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_coupon"
                android:textColor="@color/colorBlackGray"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>